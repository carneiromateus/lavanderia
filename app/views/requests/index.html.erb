<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Is contract</th>
      <th>Observation</th>
      <th>Paid</th>
      <th>Open</th>
      <th>Delivery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.is_contract %></td>
        <td><%= request.observation %></td>
        <td><%= request.paid %></td>
        <td><%= request.open %></td>
        <td><%= request.delivery %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

