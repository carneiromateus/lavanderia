<p id="notice"><%= notice %></p>

<h1 align="center">Pedidos</h1>

<table cellpadding="10">
  <thead>
    <tr>
      <th>Pertence a um contrato</th>
      <th>Observação</th>
      <th>Pago</th>
      <th>Aberto</th>
      <th>Data de Entraga</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.is_contract %></td>
        <td><%= request.observation %></td>
        <td><%= request.paid %></td>
        <td><%= request.open %></td>
        <td><%= request.delivery %></td>
        <td><%= link_to 'Mostrar', request %></td>
        <td><%= link_to 'Editar', edit_request_path(request) %></td>
        <td><%= link_to 'Excluir', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo pedido', new_request_path %>
