<p id="notice"><%= notice %></p>

<h1 align="center">Clients</h1>

<table width="100%" border="1.5px">
  <thead>
    <tr>
      <th style="padding-left=3%;padding-right=3%;">Nome</th>
      <th>Cpf</th>
      <th>Cnpj</th>
      <th>Telefone</th>
      <th>DDD</th>
      <th>Rua</th>
      <th>Numero</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td height="20%" ><%= client.name %></td>
        <td><%= client.cpf %></td>
        <td><%= client.cnpj %></td>
        <td><%= client.phone %></td>
        <td><%= client.areaCode %></td>
        <td><%= client.street %></td>
        <td><%= client.number %></td>
        <td><%= client.neighborhood %></td>
        <td><%= client.city %></td>
        <td><%= client.state %></td>
        <td><%= link_to 'Mostar', client %></td>
        <td><%= link_to 'Editar', edit_client_path(client) %></td>
        <td><%= link_to 'Excluir', client, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

