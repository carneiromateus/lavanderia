<p id="notice"><%= notice %></p>

<h1>Peças</h1>

<table>
  <thead>
    <tr>
      <th style="padding-left=3%;padding-right=3%;">Nome</th>
      <th>Nome</th>
      <th>Valor</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pecas.each do |peca| %>
      <tr>

        <td height="20%" ><%= peca.name %></td>
        <td><%= peca.value %></td>
        <td><%= peca.active %></td>
        
        <td><%= link_to 'Mostrar', peca %></td>
        <td><%= link_to 'Editar', edit_peca_path(peca) %></td>
        <td><%= link_to 'Excluir', peca, method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Peça', new_peca_path %>
